<main class="container">
<p>&nbsp;</p>
<h3><%= @project.title %></h3>

<p><%= @project.description %></p>
<small>Due Date: <%= @project.due_date.strftime("%B %d, %Y")  %></small><br>
<small>Added <%= time_ago_in_words(@project.created_at) %> ago â€¢ Updated <%= time_ago_in_words(@project.updated_at) %> ago</small><br>
<br>

<%= link_to("Edit", edit_project_path(@project.id), :class => "btn btn-outline-primary") %>
<%= link_to("Delete", @project, method: :delete, data: {confirm: 'Are you sure you want to delete this project?'}, :class => "btn btn-outline-primary") %>
<br>
<hr>

<section>
    <h1>Tasks</h1>

    <%= form_with(model: [@project, @task], local: true) do |f| %>
        <% if @task.errors.present? %>
        <p class="form-errors">
            <%= @task.errors.full_messages.join(", ") %>
        </p>
        <% end %>

        <div class="form-group">
            <%= f.text_field(
                :title,
                cols: 50,
                rows: 3,
                placeholder: "What is your next task?",
                class: "form-control"
                ) %>
        </div>

        <div class="form-group">
            <%= f.label :due_date %><br>
            <%= f.date_field :due_date %>
        </div>

        <%= f.submit 'Add Task' %>

    <% end %>

    <hr>
    <ul class="task-list">
        <% @tasks.each do |task| %>
        <li>
            <%= task.title %> <br>
            <small>
                <%= link_to(
                    "Delete",
                    task_path(task),
                    method: :delete,
                    data: {
                        confirm: "Are you sure?"
                    }
                ) %>
            </small>
            <small>
                Added <%= time_ago_in_words(task.created_at) %> ago
            </small>
        </li>
        <% end %>
    </ul>
</section>


</main>