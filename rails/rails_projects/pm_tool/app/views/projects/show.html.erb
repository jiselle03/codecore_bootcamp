<main class="container">
<p>&nbsp;</p>
<h3><%= @project.title %>
    <% if @favorite.present? && can?(:destroy, @favorite) %>
        <%= link_to(
            icon('fas', 'bookmark'),
            favorite_path(@favorite),
            method: :delete
        ) %>
    <% elsif can?(:favorite, @project) %>
        <%= link_to(
            icon('far', 'bookmark'),
            project_favorites_path(@project),
            method: :post
        ) %>
    <% end %>
</h3>

<p><%= @project.description %></p>
<small>Due Date: <%= @project.due_date.strftime("%B %d, %Y")  %></small><br>
<small>Added by <%= @project.user.full_name %> <%= time_ago_in_words(@project.created_at) %> ago â€¢ Updated <%= time_ago_in_words(@project.updated_at) %> ago</small><br>
<br>
<% if can? :crud, @project %>
    <%= button_to("Edit", edit_project_path(@project.id), :class => "btn btn-outline-primary") %>
    <%= button_to("Delete", @project, method: :delete, data: {confirm: 'Are you sure you want to delete this project?'}, :class => "btn btn-outline-primary") %>
<% end %>
<br>
<hr>

<section>
    <h1>Tasks</h1>

    <%= form_with(model: [@project, @task], local: true) do |f| %>
        <% if @task.errors.present? %>
        <p class="form-errors">
            <%= @task.errors.full_messages.join(", ") %>
        </p>
        <% end %>

        <div class="form-group">
            <%= f.text_field(
                :body,
                cols: 50,
                rows: 3,
                placeholder: "What is your next task?",
                class: "form-control"
                ) %>
        </div>

        <div class="form-group">
            <%= f.label :due_date %><br>
            <%= f.date_field :due_date %>
        </div>

        <%= f.submit 'Add Task', :class => "btn btn-outline-primary" %>

    <% end %>

    <hr>

    <ul class="task-list-done">
    <h6>Completed</h6>
        <% @tasks.each do |task| %>
            <% if task.is_done == true %>
        <li>
            <%= task.body %> | 
            <small>Due Date: <%= task.due_date.strftime("%B %d, %Y")  %></small><br>
                <%= button_to(
                        "Mark as incomplete",
                        task_path(task, is_done: false),
                        method: :patch,
                        :class => "btn btn-outline-primary btn-sm"
                    ) %>
                <% if can? :crud, task %>
                <small>
                    <%= button_to(
                        "Delete",
                        task_path(task),
                        method: :delete,
                        data: {
                            confirm: "Are you sure?"
                        },
                        :class => "btn btn-outline-primary btn-sm"
                    ) %>
                </small>
                <% end %>
            <small>
                Added by <%= task.user.full_name %> <%= time_ago_in_words(task.created_at) %> ago
            </small>
        </li>
        <% end %>
    </ul>
    <% end %>

    <ul class="task-list-undone">
        <h6>To Do</h6>
        <% @tasks.each do |task| %>
            <% if task.is_done == false %>
        <li>
            <%= task.body %> | 
            <small>Due Date: <%= task.due_date.strftime("%B %d, %Y")  %></small><br>
            <%= button_to(
                        "Mark as Complete",
                        task_path(task, is_done: true),
                        method: :patch,
                        :class => "btn btn-outline-primary btn-sm"
                    ) %>
             <br>
                <% if can? :crud, task %>
                <small>
                    <%= button_to(
                        "Delete",
                        task_path(task),
                        method: :delete,
                        data: {
                            confirm: "Are you sure?"
                        },
                        :class => "btn btn-outline-primary btn-sm"
                    ) %>
                </small>
                <% end %>
            <small>
                Added by <%= task.user.full_name %> <%= time_ago_in_words(task.created_at) %> ago
            </small>
        </li>
        <% end %>
    </ul>
    <% end %>

</section>


</main>