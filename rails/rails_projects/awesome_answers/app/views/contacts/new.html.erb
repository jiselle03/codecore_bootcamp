<%= form_with(url: contacts_path, local:true) do %>

    <div>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
    </div>
    <div>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </div>
    <div>
        <%= label_tag :message %>
        <%= text_area_tag :message %>
    </div>
    <%= submit_tag 'Contact Us' %>

<% end %>