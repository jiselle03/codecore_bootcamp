<h1>All Products</h1>

<% @products.each do |product| %>
<div>
    <h2><%= link_to(product.title, product_path(product.id)) %></h2>
    <p><%= product.description %></p>
    <p>$<%= number_with_precision(product.price, :precision => 2) %></p>
    <p>Added <%= time_ago_in_words(product.created_at) %> ago</p>
</div>
<% end %>