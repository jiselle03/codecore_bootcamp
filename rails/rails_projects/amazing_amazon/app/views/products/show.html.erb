<h1>Product</h1>
<h1><%= @product.title %></h1>
<p><%= @product.description %></p>
<p>$<%= number_with_precision(@product.price, :precision => 2) %></p>
<p>Added <%= time_ago_in_words(@product.created_at) %> ago</p>
<p>Updated <%= time_ago_in_words(@product.updated_at) %> ago</p>
<%= link_to("Delete", product_path, method: :delete, data: {confirm: 'Are you sure?'}) %>
<br>
<%= link_to("Edit", edit_product_path(@product.id)) %>