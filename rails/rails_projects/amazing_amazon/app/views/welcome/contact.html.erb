<main class="container">
<h3>Contact Us</h3>

<div>
    <%= form_with do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</div>

<div>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
</div>

<%= submit_tag 'Send', class: 'btn btn-outline-primary' %>

<% end %>
</main>