<%- include('./partials/header') %>

<h4>Notes</h4>


<table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Content</th>
            <th width=150>Actions</th>
          </tr>
        </thead>
        <tbody>
<% for (let note of notes) { %>
          <tr>
            <td><a href="/notes/<%= note.id %>"><%= note.id %></a></td>
            <td><%= note.content %></td>
            <td class="float-right">
                <a href="/notes/edit"><button class="btn btn-sm btn-warning" type="submit">Edit</button></a> &nbsp;
                <form class="form-inline" action="/" method="DELETE"><input type="hidden" name=id value="<%= note.id %>"><button class="btn btn-sm btn-danger" type="submit">Delete</button></form>
            </td>
          </tr>
        
      <% }%>
    </tbody>
    </table>


<%- include('./partials/footer') %>
