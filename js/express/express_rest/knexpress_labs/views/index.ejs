<%- include('./partials/header') %>

<h2>Notes</h2> 

<a class="nav-link" href="/notes/new"><button class="btn btn-primary btn-lg float-right" type="submit">Add New</button></a>
<p>&nbsp;</p>
<p>&nbsp;</p>

<table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>
<% for (let note of notes) { %>
          <tr>
            <td><a href="/notes/<%= note.id %>"><%= note.id %></a></td>
            <td><%= note.content %></td>
          </tr>
      <% }%>
    </tbody>
</table>

<%- include('./partials/footer') %>
